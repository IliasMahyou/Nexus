<!DOCTYPE html>
<html lang="nl-BE">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS -->
    <link rel="stylesheet" href="./css/style.css" /><link
      href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="icon" type="image/x-icon" href="/img/Logo.PNG" />
    <script type="text/javascript" src="./js/darkLight.js" defer></script>
   <script type="text/javascript" src="./js/landingDialog.js" defer></script>
    <title>Landing Page</title>
  </head>
  <body id="body-landing" class="light">
    <nav>
      <div>
        <img class="logo" src="./img/logo.png" alt="Logo-Nexus" />
      </div>
      <a href="login"><button class="login-button">Meld aan</button></a>
    </nav>

    <main id="main-landing">
      <figure>
        <img <% if(!isLoggedIn) { %> onclick="document.getElementById('dialogFortnite').classList.toggle('dialog--visible')" <% } %> src="./img/Fortnite.png" width="400px" height="300px"
        <% if(isLoggedIn){ %>
          style="opacity: 0.2;"
        <% } %> />
        <figcaption>Fortnite</figcaption>
      </figure>
      <dialog id="dialogFortnite">
        <p>Log eerst in!</p>
      </dialog>

      <figure>
        <img <% if(!isLoggedIn) { %> onclick="document.getElementById('dialogFifa').classList.toggle('dialog--visible')" <% } %> src="./img/fifa.png" width="400px" height="300px"
        <% if(isLoggedIn){ %>
          style="opacity: 0.2;"
        <% } %> />
        <figcaption>Fifa</figcaption>
      </figure>
      <dialog id="dialogFifa">
        <p>Log eerst in!</p>
      </dialog>

      <figure>
        <img <% if(!isLoggedIn) { %> onclick="document.getElementById('dialogMTG').classList.toggle('dialog--visible')" <% } %> src="./img/MTG.png" width="400px" height="300px" 
