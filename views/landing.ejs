            <% if (!isLoggedIn) { %> 
              onclick="document.getElementById('dialogFortnite').classList.toggle('dialog--visible')" 
            <% } %> 
            src="/img/fortnite.png" width="400px" height="300px"
            <%# Als de gebruiker is ingelogd, dan wordt de toegang naar het Fortnite-project verzadigt %>
