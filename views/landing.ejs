      </figure>
      <dialog id="dialogLegoMasters">
        <p>Log eerst in!</p>
      </dialog>

      <figure>
        <img <% if(!isLoggedIn) { %> onclick="document.getElementById('dialogLoTR').classList.toggle('dialog--visible')" <% } %> src="./img/lord-of-the-rings.png" width="400px" height="300px"
        <% if(isLoggedIn){ %>
          style="opacity: 0.2;"
        <% } %> />
        <figcaption>LoTR</figcaption>
      </figure>
      <dialog id="dialogLoTR">
        <p>Log eerst in!</p>
      </dialog>
    </main>
  </body>
</html>