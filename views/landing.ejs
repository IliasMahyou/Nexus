        <% if(isLoggedIn){ %>
          style="opacity: 0.2;"
        <% } %> />
        <figcaption>Pokemon</figcaption>
      </figure>
      <dialog id="dialogPokemon">
        <p>Log eerst in!</p>
      </dialog>

      <figure>
        <% if(isLoggedIn) { %> <a href="home"> <% } %>
          <img <% if(!isLoggedIn) { %> onclick="document.getElementById('dialogNBB').classList.toggle('dialog--visible')" <% } %> src="./img/NBB.png" width="400px" height="300px"/>
